<!DOCTYPE html>
<html lang="en">

<head>
	<%- include('../partials/head')%>

		<link rel="stylesheet" href="/css/users/account.css" />
</head>

<body>
	<header>
		<nav>
			<a href="/" class="logo-name">
				<img src="/img/logoBlanco.png" alt="" />
			</a>
			<div class="nav-links">
				<!-- Links de navegacion -->
				<ul id="navLinks">
					<% if(locals.logged) { %>
						<i class="fas fa-times" onclick="hideMenu()"></i>
						<li><a href="/">HOME</a></li>
						<li><a href="/products/catalogue">CATALOGUE</a></li>

						<% if(locals.logged.role=="admin" ) { %>
							<li><a href="/products/controlpanel">CONTROL PANEL</a></li>
							<li><a href="/checkout/selectDate">CHECKOUT</a></li>
							<% } %>

								<li><a href="/user/profile">PROFILE</a></li>


								<% } else { %>
									<i class="fas fa-times" onclick="hideMenu()"></i>
									<li><a href="/">HOME</a></li>
									<li><a href="/products/catalogue">CATALOGUE</a></li>

									<li><a href="/user/login">LOGIN</a></li>
									<li><a href="/user/register">REGISTER</a></li>

									<% } %>
				</ul>
			</div>
			<!-- Icono para abrir menu en mobile -->
			<i class="fas fa-bars" onclick="showMenu()"></i>
		</nav>



		<form action="/user/login" method="POST" class="create-form">

			<div class='errors'></div>

			<h1>Login</h1>

			<% if (locals.errors && errors) { %>
				<% errors.forEach((error)=> { %>
					<p>
						<%= error.msg %>
					</p>

					<% }) %>

						<% } %>

							<div class="form-field">
								<!-- <label for="username">Username</label> -->
								<input type="text" name="email" id="username" placeholder="Email" class="field" />
							</div>

							<div class="form-field">
								<!-- <label for="password">Password</label> -->
								<input type="password" name="pass" id="pass" placeholder="Password" class="field" />
							</div>

							<div class="accountcheck">
								<input type="checkbox" name="remember" id="remember" />
								<label for="remember" class="remember"> Remember me</label>
							</div>

							<button type="submit" class="button">Login</button>

							<div class="link">
								<a href="/">Forgot your Password?</a><br />
								<p>Don't have an account?<a href="/user/register"> Register</a></p>
								<a href="/">Return to home</a>
							</div>
		</form>
	</header>

	<%- include ('../partials/footer')%>

		<!-- Javascript para menu desplegable -->
		<script>
			var navLinks = document.getElementById('navLinks');
			function showMenu() {
				navLinks.style.right = 0;
			}
			function hideMenu() {
				navLinks.style.right = '-200px';
			}
		</script>
		<script src="/js/loginValidation.js"></script>
</body>

</html>