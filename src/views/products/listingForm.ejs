<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head')%>

		<link rel="stylesheet" href="/css/products/listingForm.css" />
	</head>
	<body>
		<header>
			<nav>
				<a href="/" class="logo-name">
					<img src="/img/logoBlanco.png" alt="" />
				</a>
				<div class="nav-links">
					<ul id="navLinks">
						<i class="fas fa-times" onclick="hideMenu()"></i>
						<li><a href="/">HOME</a></li>
						<li><a href="/products/catalogue">CATALOGUE</a></li>
						<li><a href="/products/controlpanel">CONTROL PANEL</a></li>
						<li><a href="/user/login">LOGIN</a></li>
						<li><a href="/user/register">REGISTER</a></li>
						<li><a href="/checkout/cart">CHECKOUT</a></li>
					</ul>
				</div>
				<i class="fas fa-bars" onclick="showMenu()"></i>
			</nav>
		</header>

		<main>
			<h1>Please input the following information</h1>
			<form
				action="/products/create"
				method="POST"
				class="create-form"
				autocomplete="off"
				enctype="multipart/form-data"
			>
				<h3>VesselÂ´s information</h3>

				<div class='error-display'></div>
				<div class="form-field">
					<input
						type="text"
						name="name"
						placeholder="Name of the vessel"
						class="field"
						id='name'
					/>
				</div>

				<div class="form-field">
					<input
						type="text"
						name="year"
						placeholder="Manufacture Year"
						class="field"
						id='year'

					/>
				</div>

				<div class="form-field">
					<input
						type="text"
						name="measures"
						placeholder="How many feet?"
						class="field"
						id='measures'

					/>
				</div>

				<div class="form-field">
					<p>Vessel</p>
					<select name="vesselType" id='vessel'>
						<option value="">Select Vessel type</option>
						<option value="monohull">Monohull</option>
						<option value="catamaran">Catamaran</option>
						<option value="monohull">Yacht</option>
					</select>
				</div>

				<div class="form-field">
					<label for="description">Description:</label>
					<textarea maxlength="200" id="description" name="description"></textarea>
				</div>
				<div class="form-field">
					<label for="description">Short Description:</label>
					<textarea maxlength="200" id="shortDescription" name="shortDescription"></textarea>
				</div>

				<div class="form-field">
					<label for="">Pictures of your boat</label>
					<input type="file" name="image" class="field" multiple id='imgs'/>
				</div>

				<button type="submit" class="button">
					Send Information
				</button>
				<a href="/products/controlpanel">Cancel</a>
			</form>
		</main>
		<!-- footer -->
		<%- include ('../partials/footer')%>

		<!-- Javascript para menu desplegable -->
		<script>
			var navLinks = document.getElementById('navLinks');
			function showMenu() {
				navLinks.style.right = 0;
			}
			function hideMenu() {
				navLinks.style.right = '-200px';
			}
		</script>
		<script src="/js/newProduct.js"></script>
	</body>
</html>
