<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
	<link rel="stylesheet" href="/css/partials/header-suelto.css" />
	<title>Login</title>
</head>

<body>
	<header>
		<nav>
			<a href="/" class="logo-name">
				<img src="/img/logoBlanco.png" alt="" />
			</a>
			<div class="nav-links">
				<!-- Links de navegacion -->
				<ul id="navLinks">
					<% if(locals.logged) { %>
						<i class="fas fa-times" onclick="hideMenu()"></i>
						<li><a href="/">HOME</a></li>
						<li><a href="/products/catalogue">CATALOGUE</a></li>

						<% if(locals.logged.role=="admin" ) { %>
							<li><a href="/products/controlpanel">CONTROL PANEL</a></li>
							<li><a href="/checkout/selectDate">CHECKOUT</a></li>
							<% } %>

								<li><a href="/user/profile">PROFILE</a></li>


								<% } else { %>
									<i class="fas fa-times" onclick="hideMenu()"></i>
									<li><a href="/">HOME</a></li>
									<li><a href="/products/catalogue">CATALOGUE</a></li>

									<li><a href="/user/login">LOGIN</a></li>
									<li><a href="/user/register">REGISTER</a></li>

									<% } %>
				</ul>
			</div>
			<i class="fas fa-bars" onclick="showMenu()"></i>
		</nav>
	</header>

	<!-- Javascript para menu desplegable -->
	<script>
		var navLinks = document.getElementById('navLinks');
		function showMenu() {
			navLinks.style.right = 0;
		}
		function hideMenu() {
			navLinks.style.right = '-200px';
		}
	</script>
</body>

</html>